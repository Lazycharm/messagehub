{
  "name": "Contact",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Contact name"
    },
    "email": {
      "type": "string",
      "description": "Email address"
    },
    "phone_number": {
      "type": "string",
      "description": "Phone number with country code"
    },
    "chat_room_id": {
  "type": "string",
     "description": "ID of the chatroom (i.e. sender number) this contact belongs to"
    },
    "country_code": {
      "type": "string",
      "description": "ISO country code"
    },
    "status": {
      "type": "string",
      "enum": [
        "active",
        "unsubscribed",
        "bounced"
      ],
      "default": "active"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "metadata": {
      "type": "object"
    }
  },
  "required": [
    "name"
  ]
}