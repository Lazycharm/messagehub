{
  "name": "Message",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "enum": [
        "sms",
        "email"
      ],
      "description": "Message type"
    },
    "direction": {
      "type": "string",
      "enum": [
        "outbound",
        "inbound"
      ],
      "default": "outbound"
    },
    "contact_id": {
      "type": "string"
    },
    "contact_name": {
      "type": "string"
    },
    "phone_number": {
      "type": "string"
    },
    "email": {
      "type": "string"
    },
    "subject": {
      "type": "string"
    },
    "content": {
      "type": "string"
    },
    "sender_id": {
      "type": "string"
    },
    "provider_message_id": {
      "type": "string"
    },
    "status": {
      "type": "string",
      "enum": [
        "pending",
        "sent",
        "delivered",
        "failed",
        "scheduled"
      ],
      "default": "pending"
    },
    "scheduled_at": {
      "type": "string",
      "format": "date-time"
    },
    "sent_at": {
      "type": "string",
      "format": "date-time"
    },
    "delivered_at": {
      "type": "string",
      "format": "date-time"
    },
    "failed_reason": {
      "type": "string"
    },
    "region": {
      "type": "string"
    },
    "cost": {
      "type": "number"
    }
  },
  "required": [
    "type",
    "content"
  ]
}