{
  "name": "Template",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "type": {
      "type": "string",
      "enum": ["sms", "email"],
      "description": "Template type"
    },
    "subject": {
      "type": "string",
      "description": "For email templates"
    },
    "content": {
      "type": "string"
    },
    "variables": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Variables like {{name}}, {{phone}}"
    },
    "category": {
      "type": "string"
    },
    "usage_count": {
      "type": "number",
      "default": 0
    }
  },
  "required": ["name", "type", "content"]
}