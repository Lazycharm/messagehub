{
  "name": "ChatRoom",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "User-friendly name of the chatroom"
    },
    "twilio_number": {
      "type": "string",
      "description": "The actual Twilio number used for sending"
    },
    "channel": {
      "type": "string",
      "enum": ["sms", "viber", "whatsapp", "email"],
      "default": "sms"
    },
    "assigned_user_ids": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "User IDs assigned to this chatroom"
    }
  },
  "required": ["name", "twilio_number"]
}
